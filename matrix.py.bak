r=int(input("enter num of rows:"))
c=int(input ("enter num of columns:"))
print("enter values in matrix 1:")
matrix1=[[int(input())for i in range(c)]for j in range(r)]
print("matrix1:")
for i in range(r):
  for j in range(c):
     print(format(matrix1 [i][j],"<3"),end="")
  print()
  
  
print("enter values in matrix 2:")
matrix2=[[int(input())for i in range(c)]for j in range(r)]
print("matrix2:")
for i in range(r):
  for j in range(c):
     print(format(matrix2 [i][j],"<3"),end="")
  print()

result=[[0 for i in range(c)]for j in range(r)]
for i in range(r):
  for j in range(c):
    result[i][j]=matrix1[i][j]+matrix2[i][j]

print("result is:")
for i in range(r):
     for j in range(c):
        print(format(result[i][j] ,"<3"),end="")
     print()
  