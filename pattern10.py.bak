num=int(input("number of rows in pattern:"))
for i in range(1,num+1):
    for j in range(0,num-i):
      print(end=" ")
    for j in range(0,i):
      print("*",end=" ")
    print()
num=int(input("number of rows in pattern:"))
for i in range(num-1,0,-1):
    for j in range(0,num-i):
      print(end=" ")
    for j in range(0,i):
      print("*",end=" ")
    print()
